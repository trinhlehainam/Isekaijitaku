[Unit]
Description=Gitea Actions Runner
Documentation=https://gitea.com/gitea/act_runner
After=docker.service

[Service]
ExecStart=/usr/local/bin/act_runner daemon --config /etc/_act_runner/config.yaml
ExecReload=/bin/kill -s HUP $MAINPID
WorkingDirectory=/home/_act_runner.linux
TimeoutSec=0
RestartSec=10
Restart=always
User=_act_runner

[Install]
WantedBy=multi-user.target