{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Override metadata for Forgejo actions",
  "packageRules": [
    {
      "description": "override forgejo/act",
      "matchPackageNames": [
        "code.forgejo.org/forgejo/act"
      ],
      "sourceUrl": "https://code.forgejo.org/forgejo/act"
    },
    {
      "description": "temporary override upload-artifact action until v4 supports GHES",
      "matchPackageNames": [
        "actions/upload-artifact"
      ],
      "replacementName": "forgejo/upload-artifact",
      "replacementVersion": "v4"
    },
    {
      "description": "temporary override download-artifact action until v4 supports GHES",
      "matchPackageNames": [
        "actions/download-artifact"
      ],
      "replacementName": "forgejo/download-artifact",
      "replacementVersion": "v4"
    },
    {
      "description": "temporary disable upload-artifact and download-artifact actions until v4 supports GHES",
      "matchPackageNames": [
        "forgejo/upload-artifact",
        "forgejo/download-artifact"
      ],
      "enabled": false
    },
    {
      "description": "override registry url and datasource for forgejo actions",
      "matchPackageNames": [
        "actions/cascading-pr",
        "actions/forgejo-release",
        "actions/setup-forgejo",
        "forgejo/upload-artifact",
        "forgejo/download-artifact"
      ],
      "overrideDatasource": "gitea-tags",
      "registryUrls": [
        "https://code.forgejo.org"
      ]
    },
  ],
  "hostRules": [
    {
      "description": "Make renovate know this is a gitea compatible host",
      "matchHost": "code.forgejo.org",
      "hostType": "gitea"
    }
  ]
}